@page "/"

<MList ThreeLine>
    @foreach(var item in PageResponse.Items)
    {
        <MListItem Class="home-list" OnClick="()=>OnClick(item)">
            <MListItemAvatar>
                <MImage Src="@item.Author.Avatar"></MImage>
            </MListItemAvatar>

            <MListItemContent>
                <MListItemTitle>@((MarkupString) item.Author.Username)</MListItemTitle>
                    <MListItemSubtitle>@((MarkupString) item.Title)</MListItemSubtitle>
                </MListItemContent>
            </MListItem>
    }
</MList>

<style>

.title {
}

.home-list {
    transition:1s;
    
}

        .home-list:hover {
            transition: 1s;
    border-radius:10px;
            background-color: #2a4185;
}
</style>